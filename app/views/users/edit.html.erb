<% if @user.errors.any? %>
    <h2><%= @user.errors.count %> error prohibited this obj from being saved:</h2>
      <ul>
        <% @user.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
<% end %>

<main>
  <p id="notice"></p>
  <div class="container">
    <div class="row">
      <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
        <h2>User info</h2>

          <% if @user.errors.any? %>
          <h2><%= @user.errors.count %> error prohibited this obj from being saved:</h2>
            <ul>
              <% @user.errors.full_messages.each do |message| %>
                <li><%= message %></li>
              <% end %>
            </ul>
          <% end %>

          <%= form_with model: @user do |f| %>
            <div class="form-group">
              <label for="inputName">Name</label>
              <!--<input class="form-control name" type="text" value="yoshiki" name="user[name]" id="user_name">-->
              <%= f.text_field :name, class: "form-control user_name", autofocus: true, id:"user_name" %>
              <!--<p><%#= f.text_field :name, autofocus: true, id:"inputName", placeholder:"名前"%></p>-->
            </div>
            <div>
              <label for="inputImage">Image</label>
              <%= f.file_field :profile_image, placeholder: "プロフィール画像", accept: "image/*" %>
            </div>
            <div>
              <label for="inputIntroduction">Introduction</label>
              <!--<textarea class="form-control introduction" name="user[introduction]" id="user_introduction"></textarea>-->
              <%= f.text_area :introduction, class: "form-control user_introduction", autofocus: true, id:"user_introduction" %>
              <!--<p><%#= f.text_field :introduction, autofocus: true, id:"inputIntroduction", placeholder:"詳細"%></p>-->
            </div>
            <div>
              <%= f.submit 'Update User', class: "btn btn-secondary" %>
            </div>
          <% end %>
      </div>
    </div>
  </div>
</main>









