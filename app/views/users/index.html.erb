<main>
  <p id="notice"></p>
  <div class="container px-5 px-sm-0">
    <div class="row">
      <div class="col-md-3">
        <h2>User info</h2>
        <%= image_tag @user.get_profile_image(100,100) %>
          <table class="table">
            <tbody>
              <tr></tr>
              <tr>
                <th>name</th>
                <th><%= @user.name %></th>
              </tr>
              <tr>
                <th>introduction</th>
                <th><%= @user.introduction %></th>
              </tr>
            </tbody>
          </table>

          <div class="row">
              <!--<div class="col">-->
                <%= link_to edit_user_path(current_user.id), class: "btn btn-outline-secondary btn-block" do %>
                <i class="fas fa-user-cog"></i>
                <% end %>
                <%#= link_to"",edit_user_path(current_user.id), class: "col-xs-12 btn btn-default glyphicon glyphicon-wrench"%>
              <!--</div>-->
          </div>

          <h2 class="mt-3">New book</h2>
            <%= form_with model: @book do |f| %>
            <div class="form-group">
              <label for="book_title">Title</label>
              <P><%= f.text_field :title, size: 30 %></P>
            </div>

            <div class="form-group">
              <label for="book_opinion">Opinion</label>
              <p><%= f.text_area :body, size: "30Ã—30" %></p>
            </div>
            <div class="form-group">
              <%= f.submit 'Create Book',class: "btn btn-success" %>
            </div>
            <% end %>
      </div>

      <div class="col-md-8 offset-md-1">
        <h2>Users</h2>
        <table class="table">
          <thead>
            <tr>
              <th scope="col">image</th>
              <th scope="col">name</th>
              <th scope="col", colspan="3"></th>
            </tr>
          </thead>
          <tbody>
            <% @users.each do |user| %>
              <tr>
                <td><%= image_tag user.get_profile_image(100,100) %></td>
                <td><%= user.name %></td>
                <td><%= link_to "Show", user_path(user.id), method: :get %></td>
              </tr>
            <% end %>

          </tbody>
        </table>

      </div>
    </div>
  </div>

</main>
